@model BookReviewGrupp4.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1 style="font-weight:bold">Delete this Book?</h1>

<h3>Are you sure you want to delete <a asp-action="Details" asp-route-id="@Model.BookId">@Model.Name</a>?</h3>
<div>
    <h4>This will delete the book and all of its reviews.</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Published)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Published)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AverageRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AverageRating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Name)
        </dt>
        <dd class="col-sm-10">
            <a asp-action="Details" asp-controller="Authors" asp-route-id="@Model.Author.AuthorId">@Html.DisplayFor(model => model.Author.Name)</a>
        </dd>
    </dl>


    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />

        <input type="submit" button onclick="return confirm('Are you sure you want to delete this book?')" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-primary" style="background-color: cornflowerblue; color: white;">Back to Book</a>
    </form>
</div>

