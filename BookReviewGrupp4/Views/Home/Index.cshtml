@model IEnumerable<BookReviewGrupp4.Models.Book>

@{
    ViewData["Title"] = "Home Page";
    var orderedPublished = Model.OrderByDescending(x => x.Published);
}

<div class="text-center" style="border: 1px solid black; border-radius: 5px; background-color:darkslategray;">
    <h1 class="display-4" style="color:white;">Welcome to IBDB - your source for book reviews!</h1>
</div>

<div class="myContainer" style="display:flex;justify-content:center;align-items:center; text-align:center; padding:20px 20px; grid-gap:5rem;">
    <div style="width:20%;float:left;">
        <p style="font-weight: bold; text-decoration: underline;">Top rated books</p>
        <table>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Details" asp-route-id="@book.BookId" asp-controller="Books">@Html.DisplayFor(modelItem => book.Name)</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div style="Width: 20%; float: right;">
    <p style="font-weight: bold; text-decoration: underline;">Latest published books</p>
    <table>
        <tbody>
            @foreach (var book in Model.OrderByDescending(x => x.Published))
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@book.BookId" asp-controller="Books">@Html.DisplayFor(modelItem => book.Name)</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>


