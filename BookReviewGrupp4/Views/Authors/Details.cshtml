@model BookReviewGrupp4.Models.ViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.Country)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Author.AuthorId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br />
<h4>Books</h4>
<div>
    <table class="table">

        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Author</th>
                <th>Published</th>
                <th>Average rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>

                    <td><a asp-action="Details" asp-controller="Books" asp-route-id="@book.BookId">@book.Name</a></td>
                    <td>@book.Genre</td>
                    <td>@Model.Author.Name</td>
                    <td>@book.Published.ToShortDateString()</td>
                    <td>@book.AverageRating</td>
                </tr>
            }
        </tbody>

    </table>
</div>


